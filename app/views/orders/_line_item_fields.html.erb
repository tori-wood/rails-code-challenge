<tr>
  <td>
    <%= f.label :widget_id, "Widget", class: "control-label" %> <br />
    <%= f.collection_select :widget_id, Widget.order(:name), :id, :name, include_blank: true, class: "form-control" %>
  </td>
  <td>
    <%= f.label :quantity, "Quantity", class: "control-label" %>
    <%= f.number_field :quantity, class: "form-control" %>
  </td>
  <td>
    <%= f.label :unit_price, "Unit Price", class: "control-label" %>
    <%= f.number_field :unit_price, class: "form-control" %>
  </td>
  <td>
    <%= f.hidden_field :_destroy %>
    <%= link_to 'Delete', '#', class: 'remove-record btn btn-danger' %>
  </td>
</tr>
