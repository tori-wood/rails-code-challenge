<h1>Order <%= @order.id %></h1>
<table>
  <thead>
    <tr>
      <th>Created</th>
      <th>Status</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @order.created_at %></td>
      <td><% if @order.shipped? %> Shipped <% else %> Processing <% end %></td>
    </tr>
  </tbody>
</table>

<table>
  <thead>
    <tr>
      <th>Order Items</th>
    </tr>
    <tr>
      <th>Item Number</th>
      <th>Order #</th>
      <th>Product #</th>
      <th>Product Name</th>
      <th>Quantity</th>
      <th>Unit Price</th>
    </tr>
  </thead>
  <tbody>
    <% @order.line_items.each do |item| %>
      <tr>
        <td><%= item.id %></td>
        <td><%= item.order_id %></td>
        <td><%= item.widget_id %></td>
        <td><%= item.widget.name %></td>
        <td><%= item.quantity %></td>
        <td><%= item.unit_price %></td>
      </tr>
    <% end %>
  </tbody>
</table>
